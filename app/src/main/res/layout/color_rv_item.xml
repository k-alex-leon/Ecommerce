<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgVShadow"
        android:visibility="invisible"
        android:background="@drawable/ellips"
        android:backgroundTint="@color/g_blue100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <ImageView
        android:id="@+id/imgVColor"
        android:background="@drawable/ellips"
        android:backgroundTint="@color/g_blue"
        app:layout_constraintTop_toTopOf="@id/imgVShadow"
        app:layout_constraintStart_toStartOf="@id/imgVShadow"
        app:layout_constraintEnd_toEndOf="@id/imgVShadow"
        app:layout_constraintBottom_toBottomOf="@id/imgVShadow"
        android:layout_width="21dp"
        android:layout_height="21dp"/>

    <ImageView
        android:id="@+id/imgVColorPicked"
        android:src="@drawable/ic_check_white"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/imgVColor"
        app:layout_constraintStart_toStartOf="@id/imgVColor"
        app:layout_constraintEnd_toEndOf="@id/imgVColor"
        app:layout_constraintBottom_toBottomOf="@id/imgVColor"
        android:layout_width="15dp"
        android:layout_height="15dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>